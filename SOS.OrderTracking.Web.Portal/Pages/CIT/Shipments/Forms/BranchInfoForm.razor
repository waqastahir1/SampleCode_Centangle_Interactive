@using SOS.OrderTracking.Web.Shared.ViewModels.WorkOrder
<div class="form-group">
    <label>Branch Code</label>
    <label class="form-control font-size-h7 font-weight-bold">@BranchFormViewModel.ShortName</label>
    <ValidationMessage For="() => BranchFormViewModel.ShortName"></ValidationMessage>
</div>
<div class="form-group">
    <label>Branch Name</label>
    <label class="form-control font-size-h7 font-weight-bold">@BranchFormViewModel.FormalName</label>
    <ValidationMessage For="() => BranchFormViewModel.FormalName"></ValidationMessage>
</div>
<div class="form-group">
    <label>Address</label>
    <input type="text" class="form-control" @bind-value="BranchFormViewModel.Address">
    <ValidationMessage For="() => BranchFormViewModel.Address"></ValidationMessage>
</div>
<div class="form-group">
    <label>Mobile No.</label>
    <input type="text" class="form-control" @bind-value="BranchFormViewModel.PersonalContactNo">
    <ValidationMessage For="() => BranchFormViewModel.PersonalContactNo"></ValidationMessage>
</div>
<div class="form-group">
    <label>Landline No.</label>
    <input type="text" class="form-control" @bind-value="BranchFormViewModel.OfficialContactNo">
    <ValidationMessage For="() => BranchFormViewModel.OfficialContactNo"></ValidationMessage>
</div>
<div class="form-group">
    <label>Latitude</label>
    <input type="number" step="any" @bind="BranchFormViewModel.Latitude" class="form-control" />
    <ValidationMessage For="() => BranchFormViewModel.Latitude"></ValidationMessage>
</div>
<div class="form-group">
    <label>Longitude</label>
    <input type="number" step="any" @bind="BranchFormViewModel.Longitude" class="form-control" />
    <ValidationMessage For="() => BranchFormViewModel.Longitude"></ValidationMessage>
</div>
<div class="form-group">
    <label>Location Status</label>
    <InputSelect class="form-control" @bind-Value="BranchFormViewModel.LocationStatus">
        <option value="None">None</option>
        <option value="Draft">Draft</option>
        <option value="Approved">Approved</option>
    </InputSelect>
    <ValidationMessage For="() => BranchFormViewModel.LocationStatus"></ValidationMessage>
</div>
