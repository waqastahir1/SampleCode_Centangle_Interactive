            .validation-summary-errors {
                color: #c82f2f;
                font-weight: 500;
            }

                .validation-summary-errors ul li {
                    list-style: none
                }
        </style>
    </head>
    <!--end::Head-->
    <!--begin::Body-->
    <body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading">
        <!--begin::Main-->
        <div class="d-flex flex-column flex-root">

        

            <!--begin::Login-->
            <div class="login login-signin-on login-3 d-flex flex-row-fluid" id="kt_login">
                <div class="d-flex flex-center flex-row-fluid bgi-size-cover bgi-position-top bgi-no-repeat" style="background-image: url(assets/media/bg/bg-3.jpg);">
                    <div class="login-form text-center p-7 position-relative overflow-hidden">

                        <div class="alert alert-custom alert-notice alert-light-success fade show mb-5" role="alert">

                            <div class="alert-text">@((Microsoft.AspNetCore.Components.MarkupString)ViewBag.Message)</div>
                            <div class="alert-close">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">
                                        <i class="ki ki-close"></i>
                                    </span>
                                </button>
                            </div>
                        </div>

                        <!--begin::Login Header-->
                        <div class="d-flex flex-center mb-15 mt-10">
                            <a href="#">
                                <img src="/assets/media/logos/sos-logo-300x100.png" class="max-h-75px" alt="" />
                            </a>
                        </div>
                        <div class="login-signin">
                            <div class="mb-20">
                                @if (ViewBag.Message == "Your password is updated successfully")
                                {
                                <a class="btn btn-primary" href="/identity/account/login" >Proceed to login</a>
                                }
                                else
                                {
                                <h3>Add/Change Password For Signing into SOS CIT/CPC/ATMS Portal</h3>
                                <div class="text-muted font-weight-bold">Enter your Password:</div>
                                <form method="post">
                                    <div asp-validation-summary="All"></div>
                                    <input type="hidden" asp-for="UserId" />
                                    <input type="hidden" asp-for="Token" />
                                    <div class="form-group mb-5">
                                        <input type="password" asp-for="Password" class="form-control h-auto form-control-solid py-4 px-8" placeholder="Password" autocomplete="off" />
                                    </div>
                                    <div class="form-group mb-5">
                                        <input asp-for="ConfirmPassword" class="form-control h-auto form-control-solid py-4 px-8" type="password" placeholder="Confirm Password" />
                                    </div>

                                    <input type="submit" value="Submit" class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-4" />

                                </form>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!--end::Login-->
<!--end::Main-->
