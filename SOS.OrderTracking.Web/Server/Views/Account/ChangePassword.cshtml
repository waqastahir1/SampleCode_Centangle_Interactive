    ViewData["Title"] = "Account";
}


    <html lang="en">
    <!--begin::Head-->
    <head>
        <base href="/">
        <meta charset="utf-8" />
        <title>Change Password - SOS CIT/CPC/ATMR</title>
        <meta name="description" content="Login page example" />
