                                                <circle fill="#000000" opacity="0.3" cx="19.5" cy="17.5" r="2.5" />
                                            </g>
                                        </svg>
                                        <!--end::Svg Icon-->
                                    </span>
                                </span>
                                <span class="navi-text text-muted text-hover-warning">@User.Identity.Name</span>
                            </span>
                        </a>
                    </div>
                </div>
            }
        </div>
        <!--end::Header-->

    </div>
    <!--end::Content-->
</div>
<!-- end::User Panel-->



