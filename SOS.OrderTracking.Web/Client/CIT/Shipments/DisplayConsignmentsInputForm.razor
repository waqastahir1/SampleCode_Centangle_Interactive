@using SOS.OrderTracking.Web.Shared.ViewModels.WorkOrder

@if (ShowConsignmentsViewModel != null)
{
    foreach (var consignment in ShowConsignmentsViewModel)
    {
        <div class="col-xl-12 mt-2">
            <div class="card card-custom gutter-b" style="height:15em;">
                @*    <div class="card-header">
                    <div class="card-title">
                        <h3 class="card-label">
                            title
                            <small>sub title</small>
                                </h3>
                            </div>
                                </div>*@
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label><b>@consignment.ShipmentCode</b></label><br />
                                <label class="mt-1">PKR @consignment.Amount.ToString("N0")</label>
                            </div>
                            <div class="form-group">
                                <label><b>Status</b></label><br />
                                <label class="label label-inline label-warning font-weight-bolder mt-1">@consignment.ConsignmentStatus</label>
                            </div>
                            <div class="form-group">
                                <label><b>Created at</b></label><br />
                                <label class="mt-1">
                                    <i class="far fa-clock mr-2 text-warning"></i>
                                    @consignment.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </label>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group">
                                <label><b>Pickup</b></label><br />
                                <label class="mt-1">
                                    <i class="flaticon2-pin mr-2 text-warning"></i>
                                    @consignment.PickupBranch
                                </label>
                            </div>

                            <div class="form-group">
                                <label><b>DropOff</b></label><br />
                                <label class="mt-1">
                                    <i class="flaticon2-pin mr-2 text-warning"></i>
                                    @consignment.DropoffBranch
                                </label>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    }
}

@code {
    [Parameter]
    public IEnumerable<ShowConsignmentsViewModel> ShowConsignmentsViewModel { get; set; }
}
