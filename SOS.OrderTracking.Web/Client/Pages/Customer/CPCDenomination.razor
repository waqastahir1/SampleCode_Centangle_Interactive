@using SOS.OrderTracking.Web.Shared.ViewModels

<div class="tab-pane fade" id="denomination_@ItemId" role="tabpanel"
     aria-labelledby="denomination_@ItemId">

    <div class="table-responsive" style="cursor:pointer;"
         @onclick="OnLicked">
        <table class="table table-light table-light-success">
            <tbody>
                <tr>
                    <td class=" table-row-title">@Denomination?.Currency5000x x Rs. 5,000</td>
                    <td class="table-center">=</td>
                    <td class="table-center font-weight-bold">Rs, @(@Denomination?.Currency5000x * 5000)</td>
                </tr>
                <tr class="bg-gray-100">
                    <td class=" table-row-title">@Denomination?.Currency1000x x Rs. 1,000</td>
                    <td class="table-center">=</td>
                    <td class="table-center font-weight-bold">Rs, @(@Denomination?.Currency1000x * 1000)</td>
                </tr>
                <tr>
                    <td class=" table-row-title">@Denomination?.Currency500x x Rs. 500</td>
                    <td class="table-center">=</td>
                    <td class="table-center font-weight-bold">Rs, @(@Denomination?.Currency500x * 500)</td>

                </tr>
                <tr class="bg-gray-100">
                    <td class=" table-row-title">@Denomination?.Currency100x x Rs. 100</td>
                    <td class="table-center">=</td>
                    <td class="table-center font-weight-bold">Rs, @(@Denomination?.Currency100x * 100)</td>
                </tr>
                <tr class="bg-gray-100">
                    <td class=" table-row-title">@Denomination?.Currency75x x Rs. 75</td>
                    <td class="table-center">=</td>
                    <td class="table-center font-weight-bold">Rs, @(@Denomination?.Currency75x * 75)</td>
                </tr>
                <tr>
                    <td class=" table-row-title">@Denomination?.Currency50x x Rs. 50</td>
                    <td class="table-center">=</td>
                    <td class="table-center font-weight-bold">Rs, @(@Denomination?.Currency50x * 50)</td>
                </tr>
                <tr class="bg-gray-100">
                    <td class=" table-row-title">@Denomination?.Currency20x x Rs. 20</td>
                    <td class="table-center">=</td>
                    <td class="table-center font-weight-bold">Rs, @(@Denomination?.Currency20x * 20)</td>
                </tr>
                <tr>
                    <td class=" table-row-title">@Denomination?.Currency10x x Rs. 10</td>
                    <td class="table-center">=</td>
                    <td class="table-center font-weight-bold">Rs, @(@Denomination?.Currency10x * 10)</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="d-flex flex-column text-md-right">
        <span class="font-size-h7 font-weight-boldest text-primary mb-0">
            <span class="font-size-xs text-dark-50 font-weight-bolder mb-1 mr-3">TOTAL: &nbsp;</span>Rs. @Amount.ToString("N0")
        </span>

    </div>
</div>
@code {
    [Parameter]
    public CitDenominationViewModel Denomination { get; set; }

    [Parameter]
    public EventCallback OnLicked { get; set; }

    [Parameter]
    public int ItemId { get; set; }

    [Parameter]
    public int Amount { get; set; }
}
