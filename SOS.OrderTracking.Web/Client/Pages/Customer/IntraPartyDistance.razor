@page "/admin/intrapartydistance"
@using SOS.OrderTracking.Web.Shared
@using SOS.OrderTracking.Web.Shared.ViewModels.IntraPartyDistance
@using SOS.OrderTracking.Web.Client.Services.Customers
@using SOS.OrderTracking.Web.Client.Components
@using SOS.OrderTracking.Web.Shared.Enums
@inherits APICrudBaseV2<IntraPartyDistanceFormViewModel, IntraPartyDistanceListViewModel, Tuple<int, int>, IntraPartyDistanceAdditionalValueViewModel, IntraPartyDistanceService>
@attribute [Authorize(Roles = "SOS-Admin, SOS-Regional-Admin, SOS-SubRegional-Admin")]

<SubHeader Heading="Distance Between Branches" RowsCount="TotalRows" HideSearch="true">
    <ChildContent>
        <div class="d-flex align-items-center">
            <a @onclick="() => OnItemClicked(null)" class="btn btn-light-warning font-weight-bold ml-2">
                Add Distance
            </a>
        </div>
    </ChildContent>
</SubHeader>
<div class="row">
    @{
        var leftColumnsCount = SelectedFromPartyId > 0 ? 6 : 12;
    }
    <div class="col-@leftColumnsCount" style="border-right: 1px #e56464 dotted;">
        <FluentCard IsBusy="@IsTableBusy">
            <EditForm Model="this">
                <div class="row">
                    <div class="col-3">
                        <div class="form-group">
                            <label>From Branch</label>
                            <Select2Ajax AjaxUrl="v1/Organization/SearchBranches"
                                         Id="_fromBranch" @bind-Value="fromPartyId"></Select2Ajax>
                            <ValidationMessage For="() => fromPartyId"></ValidationMessage>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group">
                            <label>To Branch</label>
                            <Select2Ajax AjaxUrl="v1/Organization/SearchBranches"
                                         Id="_toBranch" @bind-Value="toPartyId"></Select2Ajax>
                            <ValidationMessage For="() => toPartyId"></ValidationMessage>
                        </div>
                    </div>
                </div>
            </EditForm>
            <Notification Content="@Error" Type="NotificationCssClass.Danger"></Notification>
            @*<EditForm Model="@this">

                    <div class="row">
                        <div class="ml-5 col-3 mt-5">
                            <Select2 @bind-Value="roleTypeId" Datasource="RoleTypes" Id="__rolestype" />
                        </div>
                    </div>
                </EditForm>*@

            <table class="items-table">
                <thead>
                    <tr>
                        <th>From Branch</th>
                        <th>To Branch</th>
                        <th>Distance(km)</th>
                        @if (SelectedFromPartyId == 0)
                        {
                            <th>Distance Status</th>
                            <th>Distance Source</th>
                            <th>Created By</th>
                            <th>Created At</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Items == null)
                    {
                        <tr>
                            <td colspan="3"> <p><em>Loading...</em></p></td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Items)
                        {
                            <tr>
                                <td @onclick="()=> { SelectedFromPartyId = item.FromPartyId; SelectedToPartyId = item.ToPartyId; }">
                                    @item.FromPartyName
                                </td>
                                <td @onclick="()=> { SelectedFromPartyId = item.FromPartyId; SelectedToPartyId = item.ToPartyId; }">
                                    @item.ToPartyName
                                </td>
                                <td @onclick="()=> { SelectedFromPartyId = item.FromPartyId; SelectedToPartyId = item.ToPartyId; }">
                                    @item.Distance
                                </td>
                                @if (SelectedFromPartyId == 0)
                                {
                                    <td @onclick="() => { SelectedFromPartyId = item.FromPartyId; SelectedToPartyId = item.ToPartyId; }">
                                        @item.DistanceStatus
                                    </td>
                                    <td @onclick="() => { SelectedFromPartyId = item.FromPartyId; SelectedToPartyId = item.ToPartyId; }">
                                        @item.DistanceSource
                                    </td>
                                    <td @onclick="() => { SelectedFromPartyId = item.FromPartyId; SelectedToPartyId = item.ToPartyId; }">
                                        @item.CreatedBy
                                    </td>
                                    <td @onclick="() => { SelectedFromPartyId = item.FromPartyId; SelectedToPartyId = item.ToPartyId; }">
                                        @item.CreatedAt.ToString("dd-MM-yyyy HH:mm")
                                    </td>
                                    <td style="padding:2px; text-align:right">
                                        <a class="btn btn-icon btn-light-danger btn-sm mr-2" style="cursor:pointer;" @onclick="() => OnItemClicked(new Tuple<int, int>(item.FromPartyId, item.ToPartyId))">
                                            <i class="flaticon2-pen"></i>
                                        </a>
                                    </td>
                                }

                            </tr>
                        }
                    }

                </tbody>

            </table>

            <EditForm Model="BaseIndexModel.CurrentIndex">
                <PaginationStrip @bind-Value="BaseIndexModel.CurrentIndex" TotalPages="TotalPages" TotalRows="TotalRows"></PaginationStrip>
            </EditForm>
        </FluentCard>

    </div>
    @if (SelectedFromPartyId > 0)
    {
        <div class="col-6">
            <DistanceHistory FromPartyId="@SelectedFromPartyId" ToPartyId="@SelectedToPartyId"></DistanceHistory>
        </div>

    }
</div>
<InputForm SelectedItem="@SelectedItem"
           OnCancel="()=> SelectedItem = null"
           IsBusy="@IsModalBusy"
           Error="@ValidationError"
           OnValidSubmit="OnFormSubmit"
           Heading="Distance Form">

    <div class="form-group">
        <label>From Branch</label>
        <Select2Ajax AjaxUrl="v1/Organization/SearchBranches" Text="@SelectedItem.FromPartyName"
                     Id="fromBranch" @bind-Value="SelectedItem.FromPartyId"></Select2Ajax>
        <ValidationMessage For="() => SelectedItem.FromPartyId"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>To Branch</label>
        <Select2Ajax AjaxUrl="v1/Organization/SearchBranches" Text="@SelectedItem.ToPartyName"
                     Id="toBranch" @bind-Value="SelectedItem.ToPartyId"></Select2Ajax>
        <ValidationMessage For="() => SelectedItem.ToPartyId"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>Distance in km</label>
        <input @bind-value="SelectedItem.Distance" class="form-control" />
        <ValidationMessage For="() => SelectedItem.Distance"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>Average Travel Time(Minutes)</label>
        <input @bind-value="SelectedItem.AverageTravelTime" class="form-control" />
        <ValidationMessage For="() => SelectedItem.AverageTravelTime"></ValidationMessage>
    </div>
    <div class="form-group">
        <label>Distance Status</label>
        <InputSelect class="form-control" @bind-Value="SelectedItem.DistanceStatus">
            <option value="@DataRecordStatus.None">None</option>
            <option value="@DataRecordStatus.Draft">Draft</option>
            <option value="@DataRecordStatus.Approved">Approved</option>
        </InputSelect>
    </div>
    <div class="form-group">
        <label>Distance Source</label>
        <InputSelect class="form-control" @bind-Value="SelectedItem.DistanceSource">
            <option value="@DistanceSource.Unkown">Unkown</option>
            <option value="@DistanceSource.Manual">Manual</option>
            <option value="@DistanceSource.Google">Google</option>
        </InputSelect>
    </div>
</InputForm>
