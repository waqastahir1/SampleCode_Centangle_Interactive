        <thead>
            <tr>
                <th>ATM CheckList Id</th>
                <th>Feature  Description</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Items != null)
            {
                @foreach (var item in Items)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>@item.Feature</td>
                        <td></td>
                        @*<td style="padding:2px; text-align:right">
