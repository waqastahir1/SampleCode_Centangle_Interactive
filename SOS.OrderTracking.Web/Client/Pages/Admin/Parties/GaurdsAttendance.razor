@page "/admin/gaurdsattendance"
@using SOS.OrderTracking.Web.Shared.ViewModels.Gaurds
@using SOS.OrderTracking.Web.Client.Components
@inject HttpClient Http
@using Radzen.Blazor
@inherits APICrudBase<GaurdsAttendanceViewModel, GaurdsAttendaceListViewModel, int>

<div class="subheader py-2 py-lg-4  subheader-solid" id="kt_subheader">
    <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-2">
            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">
                Guards Attendance
            </h5>
            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-5 bg-gray-200"></div>
            <div class="d-flex align-items-center" id="kt_subheader_search">
                <span class="text-dark-50 font-weight-bold" id="kt_subheader_total">
                    @TotalRows Total
                </span>


            </div>
        </div>
        <div class="d-flex align-items-center">
            <a @onclick="()=> OnItemClicked(0)" class="btn btn-light-warning font-weight-bold ml-2">
                Mark Attendance
            </a>
        </div>
    </div>
</div>
@*<InputForm IsBusy="@IsTableBusy">*@

@*</InputForm>*@


<FluentCard IsBusy="@IsTableBusy">
    <Notification Content="@Error" Type="@NotificationCssClass.Danger"></Notification>
    <EditForm Model="@this">
        <div class="row">
            <div class="ml-5 col-4">
                <Select2Ajax AjaxUrl="v1/Common/SearchCustomers"
                             Id="__bank" @bind-Value="BankId"></Select2Ajax>
            </div>
            <div class="ml-5 col-4">
                <RadzenDatePicker TValue="DateTime?" @bind-Value="@AttendanceDate" DateFormat="dd-MM-yyyy" Style="width:100%;box-shadow:none" />
            </div>
        </div>
    </EditForm>

    <table class="items-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Contact Number</th>
                <th></th>
                <th>Present/Absent</th>
            </tr>
        </thead>
        <tbody>
            @if (Items != null)
            {
                @foreach (var item in Items)
                {
                    <tr>
                        <td>
                            @item.RelationshipId
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Address</td>
                        <td>@item.ContactNo</td>
                        <td></td>
                        <td style="padding:2px; text-align:left">
                            @if (item.AttendanceState == AttendanceState.Present)
                            {
                                <div class="checkbox-inline">
                                    <label class="checkbox checkbox-lg checkbox-outline checkbox-success text-center ml-10  mb-8">
                                        <input type="checkbox" checked="checked" @onchange="(e) => MarkAttendance(e,item.RelationshipId)" />
                                        <span></span>
                                    </label>
                                </div>
                                @*<Input type="checkbox" class="btn btn-icon btn-light-danger btn-sm mr-20" checked="checked" style="cursor:pointer;" @onchange="(e) => MarkAttendance(e,item.RelationshipId)" />*@
                            }
                            else
                            {
                                <div class="checkbox-inline">
                                    <label class="checkbox checkbox-lg checkbox-outline checkbox-success ml-10  mb-8">
                                        <input type="checkbox" @onchange="(e) => MarkAttendance(e,item.RelationshipId)" />
                                        <span></span>
                                    </label>
                                </div>

                                @*<Input type="checkbox" class="btn btn-icon btn-light-danger btn-sm mr-20" style="cursor:pointer;" @onchange="(e) => MarkAttendance(e,item.RelationshipId)" />*@
                            }
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
    <EditForm Model="CurrentIndex">
        <PaginationStrip @bind-Value="CurrentIndex" TotalPages="TotalPages" TotalRows="TotalRows"></PaginationStrip>
    </EditForm>
</FluentCard>


<InputForm Id="form1"
           SelectedItem="SelectedItem"
           IsBusy="IsModalBusy"
           Heading="Attendance Form"
           OnCancel="()=> SelectedItem = null"
           OnValidSubmit="OnFormSubmit">
    @*@if (SelectedItem.Id == 0)
        {*@

</InputForm>