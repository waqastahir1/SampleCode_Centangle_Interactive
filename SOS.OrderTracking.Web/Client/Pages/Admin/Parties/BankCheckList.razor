<FluentCard IsBusy="@IsTableBusy">
    <Notification Content="@Error"
                  Type="NotificationCssClass.Danger"></Notification>
    <table class="items-table">
        <thead>
            <tr>
                <th>Bank CheckList Id</th>
                <th>Feature Description</th>
                <th></th>
                <th style="padding:2px; text-align:left">Active/NotActive</th>

            </tr>
        </thead>
        <tbody>
            @if (Items != null)
            {
                @foreach (var item in Items)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>@item.Feature</td>
                        <td></td>
                        <td style="padding:2px; text-align:left">
                            @if (item.isActive)
                            {
                                <div class="checkbox-inline">
                                    <label class="checkbox checkbox-lg checkbox-outline checkbox-success text-center ml-10  mb-8">
                                        <input type="checkbox" checked="checked" @onchange="(e) => MarkAsActive(e, item.Id)" />
                                        <span></span>
                                    </label>
                                </div>
                                @*<Input type="checkbox" class="btn btn-icon btn-light-danger btn-sm mr-2" checked="checked" style="cursor:pointer;" @onchange="(e) => MarkAsActive(e, item.Id)" />*@
                            }
                            else
                            {
                                <div class="checkbox-inline">
                                    <label class="checkbox checkbox-lg checkbox-outline checkbox-success text-center ml-10  mb-8">
                                        <input type="checkbox" @onchange="(e) => MarkAsActive(e, item.Id)" />
                                        <span></span>
                                    </label>
                                </div>
                                @*<Input type="checkbox" class="btn btn-icon btn-light-danger btn-sm mr-2" style="cursor:pointer;" @onchange="(e) => MarkAsActive(e, item.Id)" />*@
                            }
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
    <EditForm Model="CurrentIndex">
        <PaginationStrip @bind-Value="CurrentIndex" TotalPages="TotalPages" TotalRows="TotalRows"></PaginationStrip>
    </EditForm>
</FluentCard>

